#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

class bingoCard {
public:
    vector<vector<int>> num;       // matriz 5x5 com os números
    vector<vector<bool>> marcado;  // marcação dos números
    int linhas = 5;
    int colunas = 5;

    // Construtor
    bingoCard() {
        num.resize(linhas, vector<int>(colunas));
        marcado.resize(linhas, vector<bool>(colunas, false));
    }

    // Gera a cartela com faixas por coluna
    void gerarCartela() {
        int inicio = 1;
        for (int col = 0; col < colunas; col++) {
            vector<int> valores;
            for (int i = inicio; i < inicio + 20; i++) {
                valores.push_back(i);
            }
            random_shuffle(valores.begin(), valores.end());

            for (int row = 0; row < linhas; row++) {
                num[row][col] = valores[row];
            }

            inicio += 20;
        }

        // Free space no centro
        num[2][2] = 0;
        marcado[2][2] = true;
    }


    void marcarNumero(int n) {
        for (int i = 0; i < linhas; i++) {
            for (int j = 0; j < colunas; j++) {
                if (num[i][j] == n) {
                    marcado[i][j] = true;
                }
            }
        }
    }

    bool temBingo() {
        // linhas
        for (int i = 0; i < linhas; i++) {
            bool linhaCompleta = true;
            for (int j = 0; j < colunas; j++) {
                if (!marcado[i][j]) linhaCompleta = false;
            }
            if (linhaCompleta) return true;
        }

        // colunas
        for (int j = 0; j < colunas; j++) {
            bool colunaCompleta = true;
            for (int i = 0; i < linhas; i++) {
                if (!marcado[i][j]) colunaCompleta = false;
            }
            if (colunaCompleta) return true;
        }

        // diagonal principal
        bool diag1 = true;
        for (int i = 0; i < linhas; i++) {
            if (!marcado[i][i]) diag1 = false;
        }
        if (diag1) return true;

        // diagonal secundária
        bool diag2 = true;
        for (int i = 0; i < linhas; i++) {
            if (!marcado[i][colunas - 1 - i]) diag2 = false;
        }
        if (diag2) return true;

        return false;
    }

    // Mostrar cartela
    void mostrar() {
        for (int i = 0; i < linhas; i++) {
            for (int j = 0; j < colunas; j++) {
                if (marcado[i][j])
                    cout << "**\t";
                else
                    cout << num[i][j] << "\t";
            }
            cout << endl;
        }
    }
};




int main() {
    bingoCard cartela;
    system("clear");
    cartela.gerarCartela();

    cout << "CARTELA DE BINGO:\n";
    cartela.mostrar();

    return 0;
}
